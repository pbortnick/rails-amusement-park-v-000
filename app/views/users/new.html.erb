<h1>Sign Up</h1>
<%= form_for @user do |f| %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :nausea %><br>
    <%= f.text_field :nausea %>
  </p>

  <p>
    <%= f.label :happiness %><br>
    <%= f.text_field :happiness %>
  </p>

    <%= f.label :tickets %><br>
    <%= f.text_field :tickets %>

  <p>
    <%= f.label :height %><br>
    <%= f.text_field :height %>
  </p>

  <p>
    <%= f.label :admin %><br>
    <%= f.check_box :admin %>
  </p>


  <%= f.submit %>
<% end %>
