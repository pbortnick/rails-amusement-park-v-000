<h2>Welcome to the theme park!<h2>

<% if flash[:alert].present? %>
  <p><%= flash[:alert] %></p>
<% end %>

<% if @user.admin? %>
  <h1>ADMIN</h1>
<% end %>

<p>Name:
  <%= @user.name %>
</p>

<p>Mood:
  <%= @user.mood %><br>
</p>

<p>Tickets:
  <%= @user.tickets %><br>
</p>

<p>Height:
  <%= @user.height %> inches<br>
</p>

<p>Admin:
  <%=@user.admin? %><br>
</p>

<%= link_to "Log Out", signout_path %>
<%= link_to "See attractions", attractions_path %>
